{
  "name": "chainbrary-smart-contacts",
  "version": "0.0.0",
  "scripts": {
    "prettier": "prettier --write 'contracts/*.sol' --plugin=prettier-plugin-solidity",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy": "npx hardhat run scripts/deploy.ts",
    "abi": "npx hardhat export-abi",
    "graphgen": "npx hardhat run scripts/deploy-graph.ts",
    "start-ganache": "ganache -p 8545 -e 1000 -a 10",
    "migrate": "truffle migrate --reset --network development"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "hardhat": "^2.18.0",
    "hardhat-abi-exporter": "^2.10.1",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.1.3"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@graphprotocol/graph-cli": "^0.59.0",
    "@openzeppelin/contracts": "^4.9.3",
    "bignumber.js": "^9.1.2",
    "ganache": "^7.9.1"
  }
}
